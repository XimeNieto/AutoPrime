@model PersonaModelo
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Usuario
    </div>
    <div class="card-body">

        <form asp-action="Editar" asp-controller="Mantenedor" method="post">

            <input asp-for="IdPersona" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Identificacion</label>
                <input asp-for="Identificacion" type="text" class="form-control">
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombres" type="text" class="form-control">
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input asp-for="Apellidos" type="text" class="form-control">
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nacimiento</label>
                <input asp-for="FechaNacimiento" type="text" class="form-control">
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>

            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

