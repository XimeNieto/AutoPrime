@model VehiculoModelo
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar un Vehículo
    </div>
    <div class="card-body">


        <form asp-action="Eliminar" asp-controller="Vehiculo" method="post">

            <input asp-for="IdVehiculo" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el Vehiculo: @Html.DisplayTextFor(m => m.Placa) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Vehiculo" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

