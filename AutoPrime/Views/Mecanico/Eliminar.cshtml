@model MecanicoModelo
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar un Mecánico
    </div>
    <div class="card-body">


        <form asp-action="Eliminar" asp-controller="Mecanico" method="post">

            <input asp-for="IdMecanico" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el Mecanico: @Html.DisplayTextFor(m => m.Nombres) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mecanico" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>
