@model MecanicoModelo
@{
	ViewData["Title"] = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<title>###AutoPrime### - Tu taller confiable</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
	<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
	<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
	<link rel="stylesheet" type="text/css" href="~/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/main.css">
	<meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="~/Images/EditarMecanico.jpg" alt="AutoPrime">
				</div>

				<form asp-action="Editar" asp-controller="Mecanico" method="post">
					<span class="login100-form-title">
						Editar Mecánico
					</span>
					<input asp-for="IdMecanico" type="hidden" class="form-control">
					<input asp-for="IdEmpleado" type="hidden" class="form-control">

					<div class="mb-3">
						<label class="form-label">Identificacion</label>
						<input asp-for="Identificacion" type="text" class="input100">
						<span asp-validation-for="Identificacion" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label class="form-label">Nombres</label>
						<input asp-for="Nombres" type="text" class="input100">
						<span asp-validation-for="Nombres" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label class="form-label">Apellidos</label>
						<input asp-for="Apellidos" type="text" class="input100">
						<span asp-validation-for="Apellidos" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label class="form-label">Nacimiento</label>
						<input asp-for="FechaNacimiento" type="date" class="input100">
						<span asp-validation-for="FechaNacimiento" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label class="form-label">Teléfono</label>
						<input asp-for="Telefono" type="text" class="input100">
						<span asp-validation-for="Telefono" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label class="form-label">Nivel de Estudio</label>
						<input asp-for="NivelEstudio" type="text" class="input100">
						<span asp-validation-for="NivelEstudio" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label class="form-label">Email</label>
						<input asp-for="Email" type="email" class="input100">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label class="form-label">Direccion</label>
						<input asp-for="Direccion" type="text" class="input100">
						<span asp-validation-for="Direccion" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-success">Guardar</button>

					<a asp-action="Listar" asp-controller="Mecanico" class="btn btn-info">Volver a la lista</a>
				</form>
			</div>
		</div>
	</div>




	<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="~/vendor/bootstrap/js/popper.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="~/vendor/select2/select2.min.js"></script>
	<script src="~/vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<script src="~/js/main.js"></script>

</body>
</html>

